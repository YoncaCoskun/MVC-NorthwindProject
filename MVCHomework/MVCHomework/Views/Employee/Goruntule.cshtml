@model MVCHomework.Models.CalisanModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Goruntule</title>
</head>
<body>
    <a href="/Employee/AnaSayfa">Ana Sayfa</a>
    <a href="/Employee/Yeni">Yeni</a>

    <hr />
    <form action="/Employee/Guncelle" method="POST">
        @Html.HiddenFor(x => x.CalisanId)

        <table>
            <tr>
                <td>Çalışan Soyadı</td>
                <td>@Html.TextBoxFor(x => x.Soyad) </td>
            </tr>
            <tr>
                <td>Çalışan Adı</td>
                <td>@Html.TextBoxFor(x => x.Adı)</td>
            </tr>
            <tr>
                <td>Çalışan Unvanı</td>
                <td>@Html.TextBoxFor(x => x.Unvan)</td>
            </tr>
            <tr>
                <td>Şehir</td>
                <td>@Html.TextBoxFor(x => x.Sehir)</td>
            </tr>
        </table><br />
        <input type="submit" value="Güncelle" />
    </form>

</body>
</html>
